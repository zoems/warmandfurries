<div class="navbar navbar-expand-sm navbar-light navbar-lewagon sticky px-3">
  <%# <div class="d-flex justify-content-between"> %>
    <div class="logo">
      <%= link_to root_path, class: "navbar-brand" do %>
        <i class="fa-solid fa-paw fa-beat fa-xl" style="color: #7743db;"></i>
      <% end %>
    </div>


    <div class="nav-item search">
      <%= simple_form_for :search, url: root_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" />
          <button name="button" type="submit" class="btn btn-flat">
            <i class="fas fa-search"></i>
          </button>
        </div>
      <% end %>
    </div>

      <div class="user-dashboard d-flex">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
        <div class="nav-item active">
          <% if params[:controller] == "furries" && params[:action] == "index"%>
            <%= link_to "Show Map", "map", class: "btn nav-link" %>
          <% elsif params[:controller] == "furries" && params[:action] == "map"%>
            <%= link_to "Show Furries", "furries", class: "btn nav-link" %>
          <% elsif params[:controller] == "bookings" && params[:action] == "index" %>
            <%= link_to "My Furries", "my_furries", class: "btn nav-link" %>

          <% end %>
        </div>

          <li class="nav-item active mx-3">
            <%= link_to "Dashboard", bookings_path, class: "btn nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://res.cloudinary.com/dbd4uen7z/image/upload/v1700822644/emma.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown" style="z-index: 1000";>
              <%#= link_to "Action", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">

          <div data-controller="toggle" >

            <button data-toggle-target="button" class="btn" data-action="click->toggle#show">Log in</button>
            <div class="d-none" data-toggle-target="toggleableElement">
              <%= render "devise/sessions/new" %>
          </div>
          </li>
        <% end %>
      </ul>

    </div>
    </div>
</div>
